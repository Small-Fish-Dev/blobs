@namespace Blobs.UI
@inherits PanelComponent

<root>
	@if (Alive)
	{
		<Score />
	}
	else
	{
		<Respawn />
	}

	<Leaderboard />
</root>

@code {
	private bool Alive => Client.Local.IsValid() && Client.Local.Pawn is BlobController blob && blob.IsValid();

	protected override int BuildHash()
	{
		return HashCode.Combine( Alive );
	}
}
