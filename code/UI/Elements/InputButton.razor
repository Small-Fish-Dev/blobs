@namespace Blobs.UI
@inherits Panel

<root class="@(Down ? "down" : "")">
	<div class="button">
		@Key
	</div>

	@Name
</root>

@code {
	public string Name { get; set; }
	public string Action { get; set; }

	private string Key => Input.GetButtonOrigin( Action ).ToLower();
	private bool Down => Input.Down( Action );

	protected override int BuildHash()
		=> HashCode.Combine( Name, Action, Down );
}
