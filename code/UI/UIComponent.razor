@namespace Blobs.UI
@inherits PanelComponent

<root>
	@if (Alive)
	{
		<Score />
	}
	else
	{
		<Respawn />
	}

	<Leaderboard />

	<div class="keybinds">
		<InputButton Action="Split" Name="Split" />
		<InputButton Action="Feed" Name="Feed" />
	</div>
</root>

@code {
	private bool Alive => Client.Local.IsValid() && Client.Local.Pawn is BlobController blob && blob.IsValid();

	protected override int BuildHash()
	{
		return HashCode.Combine( Alive );
	}
}
